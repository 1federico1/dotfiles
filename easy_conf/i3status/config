general {
        output_format = "i3bar"
        colors = true
        interval = 5
	color = "#CCCCCC"
	color_good = "#99CC99"
	color_bad = "#f2777a"
	color_degraded = "#ffcc66"
}

order += "window_title"
order += "disk /"
order += "wifi"
order += "ethernet _first_"
order += "net_rate"
order += "sysdata"
order += "battery_level"
order += "volume_status"
order += "backlight"
order += "time"

wireless _first_ {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

